{{ 'section-video-reviews.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top_desktop }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    background-color: {{ section.settings.section_background_color }};
    color: {{ section.settings.text_color }};
  }

  .section-{{ section.id }}  .video-reviews__heading--{{section.settings.heading_alignment}} {
    text-align: {{section.settings.heading_alignment}};
  }

  @media screen and (max-width: 750px) {
    .section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }
  }
{%- endstyle -%}

<section
  class="video-reviews section-{{ section.id }}"
  data-section-id="{{ section.id }}"
>
  <div class="container container--width video-reviews--wrapper">
    <div class="video-reviews__heading video-reviews__heading--{% if section.settings.heading_alignment %}{{ section.settings.heading_alignment }}{% endif %}">
      {% if section.settings.title != blank %}
        <div class="video-reviews__title">{{ section.settings.title }}</div>
      {% endif %}
      {% if section.settings.subtitle != blank %}
        <div class="video-reviews__subtitle">{{ section.settings.subtitle }}</div>
      {% endif %}
    </div>

    {% if section.blocks.size > 0 %}
      {% if section.settings.enable_slider %}

        <video-reviews-slider class="video-reviews__slider" data-columns-desktop="4">
          <ul id="Slider-{{ section.id }}" class="video-reviews__wrapper video-reviews__slider-list" role="list">
            {% for block in section.blocks %}
              <li id="Slide-{{ section.id }}-{{ forloop.index }}" class="video-reviews__slider-list-item">
                {% render 'video-review', block: block %}
              </li>
            {% endfor %}
          </ul>
        </video-reviews-slider>

      {% else %}

        <div class="video-reviews__wrapper video-reviews__grid">
          {% for block in section.blocks %}
            {% render 'video-review', block: block %}
          {% endfor %}
        </div>

      {% endif %}

    {% endif %}

    {% if section.settings.follow_us_link != blank %}
      {% render 'button', content: section.settings.follow_us_text, href: section.settings.follow_us_link, style: "outline", background: section.settings.button_background_color, text_color: section.settings.button_text_color %}
    {% endif %}
  </div>
</section>


{{ 'section-video-reviews.js' | asset_url | script_tag }}

{% if section.settings.enable_slider %}
  {{ 'section-video-reviews-slider.js' | asset_url | script_tag }}
{% endif %}

{% schema %}
{
  "name": "Video reviews",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_slider",
      "label": "Enable slider",
      "default": false
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "Title",
      "default": "<p>Default title</p>"
    },
    {
      "type": "richtext",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "<p>Default subtitle</p>"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading alignment",
      "default": "center",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "color",
      "id": "section_background_color",
      "label": "Section Background Color",
      "default": "#f9f8f4"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#111111"
    },
    {
      "type": "text",
      "id": "follow_us_text",
      "label": "Button Text",
      "default": "FOLLOW US"
    },
    {
      "type": "url",
      "id": "follow_us_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_background_color",
      "label": "Button background color",
      "default": "#F2F0EB"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#1C1B1B"
    },
    {
      "type": "select",
      "id": "button_alignment",
      "label": "Button alignment",
      "default": "0 auto",
      "options": [
        {
          "value": "0 auto 0 0",
          "label": "Left"
        },
        {
          "value": "0 auto",
          "label": "Center"
        },
        {
          "value": "0 0 0 auto",
          "label": "Right"
        }
      ]
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top Padding (Desktop)",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom Padding (Desktop)",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 80,
      "step": 5,
      "unit": "px",
      "label": "Top Padding (Mobile)",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 80,
      "step": 5,
      "unit": "px",
      "label": "Bottom Padding (Mobile)",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "video_post",
      "name": "Video/Photo Post",
      "settings": [
        {
          "type": "video",
          "id": "video",
          "label": "Video"
        },
        {
          "type": "image_picker",
          "id": "poster",
          "label": "Poster"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image (used if no video is provided)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Video reviews",
      "category": "Custom"
    }
  ]
}
{% endschema %}
