{%- liquid
  assign padding_top = section.settings.padding_top | append: 'px'
  assign padding_bottom = section.settings.padding_bottom | append: 'px'
  assign padding_top_mobile = section.settings.padding_top_mobile | append: 'px'
  assign padding_bottom_mobile = section.settings.padding_bottom_mobile | append: 'px'
-%}

{%- style -%}
  .account-form--{{section.id}} {
      padding-top: {{padding_top}};
      padding-bottom: {{padding_bottom}};
  }
  @media(max-width: 768px) {
      .account-form--{{section.id}} {
          padding-top: {{padding_top_mobile}};
          padding-bottom: {{padding_bottom_mobile}};
      }
  }
{%- endstyle -%}

<div class="account-form account-form--{{ section.id }}">
  {%- render 'content-form', block: section -%}
</div>
{% schema %}
{
  "name": "Account form",
  "presets": [
    {
      "name": "Account form"
    }
  ],
  "limit": 1,
  "settings": [
    {
      "type": "paragraph",
      "content": "Space between template sections(Desktop)"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 90
    },
    {
      "type": "paragraph",
      "content": "Space between template sections(Mobile)"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top mobile",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom mobile",
      "default": 60
    },
    {
      "type": "paragraph",
      "content": "Color schema"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#eae5df"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color",
      "default": "#1c1c1c"
    },
    {
      "type": "paragraph",
      "content": "Other settings"
    },
    {
      "type": "text",
      "id": "name_button",
      "label": "Text for the button (when customers are logged in)",
      "default": "Log in"
    }
  ]
}
{% endschema %}
