{{ 'section-popular-collections.css' | asset_url | stylesheet_tag }}
<script src="{{ 'section-popular-collections.js' | asset_url }}" defer></script>

<style>
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    padding-top: {{ section.settings.top_padding_mobile }}px;
    padding-bottom: {{ section.settings.bottom_padding_mobile }}px;
    overflow: hidden;
  }

  #shopify-section-{{ section.id }} .s-popular-collections__title {
    color: {{ section.settings.title_color }};
  }

  @media screen and (min-width: 768px) {
    #shopify-section-{{ section.id }} {
      padding-top: {{ section.settings.top_padding_desktop }}px;
      padding-bottom: {{ section.settings.bottom_padding_desktop }}px;
    }
  }
</style>

<s-popular-collections class="s-popular-collections" data-section-id="{{ section.id }}">
  <div class="s-popular-collections__wrapper container--width">
    {% if section.settings.title != blank %}
      <h2 class="s-popular-collections__title">
        {{ section.settings.title }}
      </h2>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="s-popular-collections__tabs" role="tablist">
        {% for block in section.blocks %}
          {%- assign collection = collections[block.settings.collection] -%}
          {%- assign tab_title = block.settings.title | default: collection.title -%}
          {% if collection != blank and tab_title != blank %}
            {% assign tab_index = forloop.index0 %}
            {% assign is_active = forloop.first %}
            <button
              type="button"
              class="button button--outline s-popular-collections__tab{% if is_active %} is-active{% endif %}"
              role="tab"
              aria-selected="{{ is_active }}"
              aria-controls="popular-collections-panel-{{ section.id }}-{{ tab_index }}"
              id="popular-collections-tab-{{ section.id }}-{{ tab_index }}"
              data-tab-index="{{ tab_index }}"
            >
              {{ tab_title | escape }}
            </button>
          {% endif %}
        {% endfor %}
      </div>

      <div class="s-popular-collections__panels">
        {% for block in section.blocks %}
          {%- assign collection = collections[block.settings.collection] -%}
          {%- assign tab_title = block.settings.title | default: collection.title -%}
          {% if collection != blank and tab_title != blank %}
            {% assign tab_index = forloop.index0 %}
            {% assign is_active = forloop.first %}
            <div
              class="s-popular-collections__panel{% if is_active %} is-active{% endif %}"
              id="popular-collections-panel-{{ section.id }}-{{ tab_index }}"
              role="tabpanel"
              aria-labelledby="popular-collections-tab-{{ section.id }}-{{ tab_index }}"
              data-tab-index="{{ tab_index }}"
            >
              <div class="s-popular-collections__grid">
                {%- for product in collection.products limit: 4 -%}
                  <div class="s-popular-collections__cell">
                    {%- render 'product-card', product: product -%}
                  </div>
                {%- endfor -%}
              </div>

              {% if block.settings.button_label != blank and block.settings.button_link != blank %}
                <div class="s-popular-collections__cta">
                  <a class="s-popular-collections__button button button--outline" href="{{ block.settings.button_link }}">
                    {{ block.settings.button_label }}
                  </a>
                </div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</s-popular-collections>

{% schema %}
{
  "name": "Popular Collections",
  "tag": "section",
  "class": "section-popular-collections",
  "settings": [
    {
      "type": "range",
      "label": "Top Padding (Mobile)",
      "id": "top_padding_mobile",
      "default": 38,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "range",
      "label": "Bottom Padding (Mobile)",
      "id": "bottom_padding_mobile",
      "default": 38,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "range",
      "label": "Top Padding (Desktop)",
      "id": "top_padding_desktop",
      "default": 78,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "range",
      "label": "Bottom Padding (Desktop)",
      "id": "bottom_padding_desktop",
      "default": 80,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "color",
      "label": "Background Color",
      "id": "background_color",
      "default": "#f2f0eb"
    },
    {
      "type": "text",
      "label": "Title",
      "id": "title",
      "default": "Popular categories"
    },
    {
      "type": "color",
      "label": "Title Color",
      "id": "title_color",
      "default": "#1c1c1c"
    }
  ],
  "blocks": [
    {
      "type": "collection_tab",
      "name": "Collection tab",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Tab title",
          "default": "Hair"
        },
        {
          "type": "collection",
          "label": "Select Collection",
          "id": "collection"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "View all products"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Popular Collections"
    }
  ]
}
{% endschema %}
