{{ 'section-product-tabs.css' | asset_url | stylesheet_tag }}
<script src="{{ 'section-product-tabs.js' | asset_url }}" defer></script>

<style>
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    padding-top: {{ section.settings.top_padding_mobile }}px;
    padding-bottom: {{ section.settings.bottom_padding_mobile }}px;
  }

  #shopify-section-{{ section.id }} .s-product-tabs__title {
    color: {{ section.settings.title_color }};
  }

  @media screen and (min-width: 768px) {
    #shopify-section-{{ section.id }} {
      padding-top: {{ section.settings.top_padding_desktop }}px;
      padding-bottom: {{ section.settings.bottom_padding_desktop }}px;
    }
  }
</style>

<s-product-tabs class="s-product-tabs" data-section-id="{{ section.id }}">
  <div class="s-product-tabs__wrapper container--width">
    {% if section.settings.title != blank %}
      <h2 class="s-product-tabs__title">
        {{ section.settings.title }}
      </h2>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="s-product-tabs__tabs" role="tablist">
        {% for block in section.blocks %}
          {%- assign collection = collections[block.settings.collection] -%}
          {%- assign picked_products = block.settings.products -%}
          {%- assign tab_title = block.settings.title | default: collection.title -%}
          {% if picked_products != blank or collection != blank and tab_title != blank %}
            {% assign tab_index = forloop.index0 %}
            {% assign is_active = forloop.first %}
            <button
              type="button"
              class="s-product-tabs__tab{% if is_active %} is-active{% endif %}"
              role="tab"
              aria-selected="{{ is_active }}"
              aria-controls="product-tabs-panel-{{ section.id }}-{{ tab_index }}"
              id="product-tabs-tab-{{ section.id }}-{{ tab_index }}"
              data-tab-index="{{ tab_index }}"
            >
              {{ tab_title | escape }}
            </button>
          {% endif %}
        {% endfor %}
      </div>

      <div class="s-product-tabs__tab-bar" aria-hidden="true">
        <span class="s-product-tabs__tab-bar-track"></span>
        <span class="s-product-tabs__tab-bar-thumb"></span>
      </div>

      <div class="s-product-tabs__panels">
        {% for block in section.blocks %}
          {%- assign collection = collections[block.settings.collection] -%}
          {%- assign picked_products = block.settings.products -%}
          {%- assign tab_title = block.settings.title | default: collection.title -%}
          {% if picked_products != blank or collection != blank and tab_title != blank %}
            {% assign tab_index = forloop.index0 %}
            {% assign is_active = forloop.first %}
            <div
              class="s-product-tabs__panel{% if is_active %} is-active{% endif %}"
              id="product-tabs-panel-{{ section.id }}-{{ tab_index }}"
              role="tabpanel"
              aria-labelledby="product-tabs-tab-{{ section.id }}-{{ tab_index }}"
              data-tab-index="{{ tab_index }}"
            >
              <div class="s-product-tabs__slider">
                <button
                  class="s-product-tabs__arrow s-product-tabs__arrow--prev"
                  type="button"
                  aria-label="{{ 'general.pagination.previous' | t | default: 'Previous' }}"
                >
                  {% render "icon", icon: "chevron-left" %}
                </button>

                <div
                  class="s-product-tabs__swiper swiper"
                  data-tab-swiper="{{ tab_index }}"
                >
                  <div class="swiper-wrapper">
                    {%- if picked_products != blank -%}
                      {%- for product in picked_products limit: 16 -%}
                        <div class="s-product-tabs__slide swiper-slide">
                          {%- render 'c-product-card', product: product -%}
                        </div>
                      {%- endfor -%}
                    {%- elsif collection != blank -%}
                      {%- for product in collection.products limit: 16 -%}
                        <div class="s-product-tabs__slide swiper-slide">
                          {%- render 'c-product-card', product: product -%}
                        </div>
                      {%- endfor -%}
                    {%- endif -%}
                  </div>
                </div>

                <button
                  class="s-product-tabs__arrow s-product-tabs__arrow--next"
                  type="button"
                  aria-label="{{ 'general.pagination.next' | t | default: 'Next' }}"
                >
                  {% render "icon", icon: "chevron-right" %}
                </button>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</s-product-tabs>

{% schema %}

{
  "name": "Product Tabs",
  "tag": "section",
  "class": "section-product-tabs",
  "settings": [
    {
      "type": "range",
      "label": "Top Padding (Mobile)",
      "id": "top_padding_mobile",
      "default": 38,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "range",
      "label": "Bottom Padding (Mobile)",
      "id": "bottom_padding_mobile",
      "default": 38,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "range",
      "label": "Top Padding (Desktop)",
      "id": "top_padding_desktop",
      "default": 78,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "range",
      "label": "Bottom Padding (Desktop)",
      "id": "bottom_padding_desktop",
      "default": 80,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "color",
      "label": "Background Color",
      "id": "background_color",
      "default": "#f2f0eb"
    },
    {
      "type": "text",
      "label": "Title",
      "id": "title",
      "default": "Products in focus"
    },
    {
      "type": "color",
      "label": "Title Color",
      "id": "title_color",
      "default": "#1c1c1c"
    }
  ],
  "blocks": [
    {
      "type": "products_tab",
      "name": "Products Tab",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Enter Title",
          "default": "Best Sellers"
        },
        {
          "type": "collection",
          "label": "Select Collection",
          "id": "collection"
        },
        {
          "type": "product_list",
          "label": "Select Products",
          "id": "products"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Tabs"
    }
  ]
}
{% endschema %}
